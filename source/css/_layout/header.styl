#page-header
    position: relative
    width: 100%
    background-color: white
    background-size: cover
    background-repeat: no-repeat
    background-position: center center
    transition: all .5s

    &.top-full-page
        height: 100vh
        background-attachment: fixed

        #site-info
            position: absolute
            top: 43%
            padding: 0px 0px
            width: 100%

    &.not-top-full-page
        height: 25rem

    #site-title
        text-align: center
        text-shadow: 2px 2px 4px rgba(0, 0, 0, .15)
        line-height: 1.5
        font-size: 4em
        color: white
        margin: 0

    #site-subtitle
        text-align: center
        text-shadow: 2px 2px 4px rgba(0, 0, 0, .15)
        line-height: 1.5
        font-size: 1.3em
        color: white
        margin: 0

    #post-page-info
        position: absolute
        top: 30%
        padding: 0px 0px
        width: 100%

        #post-title
            position: relative
            text-align: center
            font-size: 4em
            color: white
            line-height: 1.5

        #post-time
            position: relative
            text-align: center
            font-size: 1.0em
            color: white
            line-height: 1.5

        #update-time
            position: relative
            text-align: center
            font-size: 1.0em
            color: white
            line-height: 1.5

        #pv-info
            position: relative
            display: flex
            justify-content: center
            text-aline: center
            font-size: 1.0em
            color: white
            line-height: 1.5

            span
                white-space: pre



#nav
    position: absolute
    top: 0
    z-index: 90
    display: flex
    align-items: center
    flex-direction: column
    width: 100%
    height: 60px
    font-size: 1.3em
    transition: all .5s

    #menus
        padding: 10px 0px 10px 0px

    #menus_items
        display: inline

    #menus_item
        position: relative
        display: inline-block
        padding: 0 50px

        &:before
            content: ""
            position: absolute
            left: 0
            bottom: -2px
            height: 2px
            width: 100%
            background: white
            transform: scale(0)
            transition: all .3s

        &:hover:before
            transform: scale(1)

    a
        text-decoration: none
        color: white