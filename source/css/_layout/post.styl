#article
    position: relative
    width: 50%
    margin: 50px auto
    word-wrap: break-word
    text-align: justify

    code
        display: inline-block
        max-width: 100%
        overflow: auto
        vertical-align: sub

    h1,h2,h3,h4,h5,h6
        margin-top: 24px
        margin-bottom: 16px
        font-weight: 600
        line-height: 1.25

    h1
        font-size: 1.7em
    
    h2
        font-size: 1.5em

    h3
        font-size: 1.25em

    h4
        font-size: 1em
    
    h5
        font-size: 0.875em

    h6
        font-size: 0.85em

    p
        line-height: 1.7em
        font-size: 1.2em
        margin-top: 0
        margin-bottom: 10px

    a
        color: $dark-blue
        text-decoration: none

        &:hover
            display: inline-block
            border-bottom: 1px solid $dark-blue

    img
        max-width: 100%
        box-sizing: content-box
        background-color: #fff

    ul, ol
        padding-left: 2em

    ul ul, ul ol, ol ul, ol ol
        margin-top: 0
        margin-bottom: 0

    li+li
        margin-top: 0.25em

    blockquote
        padding: 0 1em
        color: #777
        border-left: 0.25em solid #ddd
        margin: 0
        margin-top: 0;
        margin-bottom: 16px;

    blockquote>:first-child
        margin-top: 0

    blockquote>:last-child
        margin-bottom: 0

    

 #post-pagination-wrap
    position: relative
    width: 50%
    margin: 50px auto

    #post-pagination
        position: relative
        display: inline-block
        width: 100%
        font-size: 1.2em

        a
            text-decoration: none
            color: black

        #prev-post
            position: relative
            width: 50%
            text-align: center
            float: left
            word-break: break-all

            &:before
                content: ""
                position: absolute
                left: 0
                bottom: -2px
                height: 2px
                width: 100%
                background: black
                transform: scale(0)
                transition: all .3s

            &:hover:before
                transform: scale(1)

        #next-post
            position: relative
            width: 50%
            text-align: center
            float: right
            word-break: break-all

            &:before
                content: ""
                position: absolute
                left: 0
                bottom: -2px
                height: 2px
                width: 100%
                background: black
                transform: scale(0)
                transition: all .3s

            &:hover:before
                transform: scale(1)         

#page-toc
    position: absolute
    width: 18%

    a
        color: $dark-blue
        text-decoration: none

        &:hover
            display: inline-block
            border-bottom: 1px solid $dark-blue

    li
        list-style: none

    ul, ol
        padding-left: 2em

    ul ul, ul ol, ol ul, ol ol
        margin-top: 0
        margin-bottom: 0

    li+li
        margin-top: 0.25em